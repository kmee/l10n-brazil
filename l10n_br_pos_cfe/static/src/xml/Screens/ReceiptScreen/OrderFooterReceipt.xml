<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderFooterReceipt" owl="1">
        <div class="footer">
            <div class="footer__sat-info">
                SAT No. XXXXXXXXX
            </div>

            <div class="footer__date">
                <t t-esc="document_date" />
            </div>

            <div class="footer__barcode">
                <div>
                    <t t-esc="document_key" />
                </div>
                <div>
                    <img
                        class="footer__barcode-image"
                        t-att-src="'/report/barcode/Code128/'+order['document_key_formatted']"
                        alt="Barcode"
                    />
                </div>
            </div>

            <div class="footer__qrcode">
                <div>
                    <img
                        t-att-src="'report/barcode/QR/'+"
                        style="width:50px;heigth:50px;"
                        alt="QRCode"
                    />
                </div>
            </div>

            <div class="footer__observation">
                Consulte o QRCode pelo aplicativo "De olho na nota", dispon√≠vel na AppStore (Apple) e PlayStore (Android).
            </div>
        </div>
    </t>

</templates>
