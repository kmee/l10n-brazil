<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t
        t-name="OrderReceipt"
        t-inherit="point_of_sale.OrderReceipt"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
            <div class="pos-receipt">
                <OrderHeaderReceipt company="receipt.company" />
                <p
                    class="receipt__divider"
                >------------------------------------------------</p>
                <OrderSubtitleReceipt order="receipt" />
                <p
                    class="receipt__divider"
                >------------------------------------------------</p>
                <div class="body">
                    <div class="body__header">
                        # | COD | DESC | QTD | UN | VLUN R$ | VLTR R$ | VL ITEM R$
                    </div>
                    <p
                        class="receipt__divider"
                    >------------------------------------------------</p>
                    <t t-foreach="receipt.orderlines" t-as="line" t-key="line.id">
                        <OrderRowReceipt line="line" />
                    </t>
                    <OrderTotalsReceipt order="receipt" />
                    <t
                        t-foreach="receipt.paymentlines"
                        t-as="paymentline"
                        t-key="paymentline.id"
                    >
                        <OrderPaymentReceipt paymentline="paymentline" />
                    </t>
                    <div>
                        <div>
                            <span>Troco</span>
                        </div>
                        <div>
                            <span>Valor Troco</span>
                        </div>
                    </div>
                    <p
                        class="receipt__divider"
                    >------------------------------------------------</p>
                </div>
                <OrderFooterReceipt />
            </div>
        </xpath>
    </t>

</templates>
