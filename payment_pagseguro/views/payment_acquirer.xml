<odoo>

    <record model="ir.ui.view" id="payment_acquirer_form_view">
        <field name="name">payment.acquirer.form (in l10n_br_payment_pagseguro)</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'pagseguro')]}">
                        <field name="pagseguro_email"/>
                        <field name="pagseguro_token" password="True"/>
                        <field name="pagseguro_public_key"/>
                    </group>
                </xpath>
        </field>
    </record>


</odoo>
