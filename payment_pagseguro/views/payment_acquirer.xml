<odoo>

    <data noupdate="0">

        <record model="ir.ui.view" id="payment_acquirer_form_view">
            <field name="name">payment.acquirer.form (in payment_pagseguro)</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form" />
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group
                        string="CREDIT/BILL"
                        attrs="{'invisible': [('provider', '!=', 'pagseguro')]}"
                    >
                        <field
                            name="pagseguro_token"
                            string="Pagseguro Token"
                            password="True"
                        />
                        <field name="pagseguro_capture" />
                        <field name="pagseguro_notification_url" />
                    </group>
                    <group
                        string="PIX"
                        name="pix"
                        attrs="{'invisible': [('provider', '!=', 'pagseguro')]}"
                    >
                        <field name="pagseguro_email" />
                        <field name="pagseguro_client_id" />
                        <field name="pagseguro_client_secret" />
                        <field name="pagseguro_pix_key" />
                        <field
                            name="pagseguro_crt_file"
                            filename="pagseguro_crt_filename"
                        />
                        <field name="pagseguro_crt_filename" invisible="1" />
                        <field
                            name="pagseguro_key_file"
                            filename="pagseguro_key_filename"
                        />
                        <field name="pagseguro_key_filename" invisible="1" />
                        <field name="pagseguro_pix_authenticated" invisible="1" />
                    </group>
                </xpath>
                <xpath expr='//field[@name="journal_id"]' position='before'>
                    <field name="pagseguro_max_installments" />
                    <field name="pagseguro_pix_expiration" />
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <div>
                        <button
                            name="pagseguro_pix_validate"
                            class="oe_stat_button o_field_widget"
                            type="object"
                            icon="fa-check"
                            attrs="{'invisible': [('pagseguro_pix_authenticated', '=', False)]}"
                        >
                            <span class="text-success">PIX Validated</span>
                        </button>
                        <button
                            name="pagseguro_pix_validate"
                            class="oe_stat_button o_field_widget"
                            type="object"
                            icon="fa-times"
                            attrs="{'invisible': [('pagseguro_pix_authenticated', '=', True)]}"
                        >
                            <span class="text-danger">PIX Validated</span>
                        </button>
                    </div>
                </xpath>
                <group name="acquirer_config" position="inside">
                    <div>
                        <label for="pagseguro_boleto_due_date_in_days" string="Dias de vencimento a partir da criaÃ§Ã£o do boleto"/>
                        <field name="pagseguro_boleto_due_date_in_days"/>
                    </div>
                </group>
            </field>
        </record>

    </data>

</odoo>
