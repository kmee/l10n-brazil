<odoo>

    <data noupdate="0">

        <record model="ir.ui.view" id="payment_acquirer_form_view">
            <field name="name">payment.acquirer.form (in payment_pagseguro)</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form" />
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'pagseguro')]}">
                        <field
                            name="pagseguro_token"
                            string="Pagseguro Token"
                            password="True"
                        />
                    </group>
                    <group
                        string="PIX"
                        name="pix"
                        attrs="{'invisible': [('provider', '!=', 'pagseguro')]}"
                    >
                        <field name="client_id" />
                        <field name="client_secret" />
                        <field name="crt_file" filename="crt_filename" />
                        <field name="crt_filename" invisible="1" />
                        <field name="key_file" filename="key_filename" />
                        <field name="key_filename" invisible="1" />
                        <field name="seller_token" />
                        <field name="pix_authenticated" invisible="1" />
                    </group>
                </xpath>
                <xpath expr='//field[@name="journal_id"]' position='before'>
                    <field name="pagseguro_max_installments" />
                </xpath>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <div>
                        <button
                            name="validate_credentials"
                            class="oe_stat_button o_field_widget"
                            type="object"
                            icon="fa-check"
                            attrs="{'invisible': [('pix_authenticated', '=', False)]}"
                        >
                            <span class="text-success">PIX Validated</span>
                        </button>
                        <button
                            name="validate_credentials"
                            class="oe_stat_button o_field_widget"
                            type="object"
                            icon="fa-times"
                            attrs="{'invisible': [('pix_authenticated', '=', True)]}"
                        >
                            <span class="text-danger">PIX Validated</span>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>

    </data>

</odoo>
