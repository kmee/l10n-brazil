<odoo>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form (in payment_pagseguro)</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='payment_action_void']" position="after">
                    <button
                        name="pagseguro_check_transaction"
                        type="object"
                        string="Check Transaction"
                        attrs="{'invisible':[
                                '|',
                                ('payment_mode_id', '!=', %(payment_mode_pagseguro)d),
                                ('authorized_transaction_ids', '=', [])
                            ]}"
                    />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
