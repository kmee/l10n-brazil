<odoo>

    <record model="ir.ui.view" id="sped_operacao_form_view">
        <field name="name">l10n_br_fiscal.operation.form (in l10n_br_mdfe)</field>
        <field name="model">l10n_br_fiscal.operation</field>
        <field name="arch" type="xml">
            <form string="Operação Fiscal - Emissão de MDF-e">
                <sheet>
                    <field name="edoc_purpose" invisible="1"/>
                    <field name="document_type_ids" invisible="1"/>
                    <field name="id" invisible="1"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Nome" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group colspan="4" col="4">
                             <field name="company_id" colspan="4" options="{'no_create': True, 'no_open': True}"/>
                             <!--                              <field name="company_id" colspan="4" options="{'no_create': True, 'no_open': True}" domain="[('contribuinte', '=', '1')]"/> -->
                             <newline/>
                             <field name="emitter_type" required="1" readonly="1" colspan="2"/>
                             <!-- <field name="document_serie"/> -->
                             <field name="transport_modality" required="1" readonly="1"/>
                             <field name="transporter_type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Informações complementares">
                            <group>
                                <group colspan="4" col="4">
                                    <separator string="Informações complementares" colspan="4"/>
                                    <!-- <field name="infcomplementar" colspan="4" nolabel="1"/> -->
                                    <separator string="Informações adicionais de interesse do fisco" colspan="4"/>
                                    <!-- <field name="infadfisco" colspan="4" nolabel="1"/> -->
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

    <record model="ir.ui.view" id="sped_operacao_search_view">
        <field name="name">l10n_br_fiscal.operation.search (in l10n_br_mdfe)</field>
        <field name="model">l10n_br_fiscal.operation</field>
        <field name="arch" type="xml">
            <search string="Operação Fiscal - Emissão de MDF-E">
                <field name="name" />
                <field name="company_id" />
                <field name="emitter_type" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="sped_operacao_tree_view">
        <field name="name">l10n_br_fiscal.operation.tree (in l10n_br_mdfe)</field>
        <field name="model">l10n_br_fiscal.operation</field>
        <field name="arch" type="xml">
            <tree string="Operação Fiscal - Emissão de MDF-e">
                    <field name="name" />
                    <field name="company_id" />
                    <field name="emitter_type" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sped_operacao_act_window">
        <field name="name">MDF-E</field> <!-- TODO -->
        <field name="res_model">l10n_br_fiscal.operation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('edoc_purpose', '=', '0'), ('document_type_ids', '=', '58')]</field>
        <field name="context">{'default_emissao': '0', 'default_document_type': '58'}</field>
    </record>

    <record model="ir.actions.act_window.view" id="sped_operacao_emissao_mdfe_tree_acao">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sped_operacao_tree_view"/>
        <field name="act_window_id" ref="sped_operacao_act_window"/>
    </record>

    <record model="ir.actions.act_window.view" id="sped_operacao_emissao_mdfe_form_acao">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sped_operacao_form_view"/>
        <field name="act_window_id" ref="sped_operacao_act_window"/>
    </record>

    <record model="ir.ui.menu" id="sped_operacao_menu">
        <field name="name">MDF-E</field>
        <field name="parent_id" ref="l10n_br_fiscal.operation_menu"/>
        <field name="action" ref="sped_operacao_act_window"/>
        <field name="sequence" eval="300"/>
    </record>

</odoo>
