<odoo>

    <record model="ir.ui.view" id="l10n_br_mdfe_item_form_view">
        <field name="name">l10n_br.mdfe.item.form (in l10n_br_mdfe)</field>
        <field name="model">l10n_br.mdfe.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="mdfe_id" invisible="1"/>
                    <group>
                        <group col="4" colspan="4">
                            <field name="document_id" colspan="2"/>
                            <newline />
                            <field name="document_key" colspan="4"/>
                            <newline />
                            <field name="document_serie" />
                            <field name="document_number" />
                            <newline />
                            <field name="document_model" />
                            <field name="document_status"/>
                        </group>
                    </group>
                    <group>
                        <group string="Remetente">
                            <field name="sender_id"/>
                            <field name="sender_city_id"/>
                            <field name="request_datetime"/>
                            <field name="loading_datetime"/>
                            <field name="expedition_datetime"/>
                        </group>
                        <group string="DestinatÃ¡rio">
                            <field name="receiver_city_id"/>
                            <field name="receiver_id"/>
                            <field name="delivery_datetime"/>
                        </group>
                        <group col="4" colspan="4">
                            <field name="net_weight"/>
                            <field name="gross_weight"/>
                            <field name="net_volume"/>
                            <field name="gross_volume"/>
                            <field name="quantity"/>
                        </group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_br_mdfe_item_tree_view">
        <field name="name">l10n_br.mdfe.item.tree (in l10n_br_mdfe)</field>
        <field name="model">l10n_br.mdfe.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="mdfe_id" invisible="1"/>
                <field name="sender_city_id"/>
                <field name="sender_id"/>
                <field name="receiver_city_id"/>
                <field name="receiver_id"/>
                <field name="request_datetime"/>
                <field name="document_id"/>
                <field name="document_serie"/>
                <field name="document_number"/>
                <field name="document_status"/>
                <field name="net_volume"/>
                <field name="gross_volume"/>
                <field name="net_weight"/>
                <field name="gross_weight"/>
            </tree>
        </field>
    </record>

