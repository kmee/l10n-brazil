<odoo>

    <record model="ir.ui.view" id="mdfe_cancellation_reason_wizard_form">
        <field name="name">mdfe.cancellation.wizard.form</field>
        <field name="model">mdfe.cancellation.wizard</field>
        <field name="arch" type="xml">
            <form string="Motivo do Cancelamento da MDF-e">
                Justificativa (10-255 caracteres)
                <field name="cancellation_reason" nolabel="1" />

                <footer>
                   <button name="action_cancellation_reason"
                            title="Cancelar MDF-e"
                            class='btn-primary oe_highlight'
                            type='object'/>

                    <button title='Cancel'
                            class='btn-default oe_link'
                            special='cancel'/>
                        <!-- mudado title -->
               </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="mdfe_cancellation_reason_wizard_action">
        <field name="name">Motivo de cancelamento de MDF-e</field>
        <field name="res_model">mdfe.cancellation.wizard</field>
       <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
