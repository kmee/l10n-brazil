<odoo>

    <record model="ir.ui.view" id="repair_order_form_view">
        <field name="name">repair.order.form (in l10n_br_repair)</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <button name="action_created_invoice" position="replace">
                <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('invoice_count', '=', 0)]}">
                    <field name="invoice_count" widget="statinfo" string="Invoices" modifiers="{'readonly':true}"/>
                </button>
                <button name="action_view_document" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('fiscal_document_count', '=', 0)]}">
                    <field name="fiscal_document_count" widget="statinfo" string="Fiscal Documents" modifiers="{'readonly':true}"/>
                </button>
            </button>
            <field name="amount_untaxed" position="before" >
                <field name="amount_gross" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                 <field name="amount_discount" groups="l10n_br_repair.group_discount_per_value" widget='monetary' options="{'currency_field': 'currency_id'}"/>
            </field>
            <field name="amount_untaxed" position="after" >
                 <field name="amount_freight" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                 <field name="amount_insurance" widget='monetary' options="{'currency_field': 'currency_id'}" />
                 <field name="amount_costs" widget='monetary' options="{'currency_field': 'currency_id'}" />
             </field>
            <field name="invoice_method" position="after" >
                <field name="fiscal_operation_id" attrs="{'invisible': [('invoice_method', '==', 'none')]}"/>
                <field name="ind_pres" attrs="{'invisible': [('invoice_method', '==', 'none')]}"/>
            </field>
            <field name="quotation_notes" position="after">
                <group>
                    <field name="copy_repair_quotation_notes"/>
                    <field name="customer_additional_data"/>
                    <field name="fiscal_additional_data"/>
                </group>
            </field>

        </field>
    </record>

    <template id="report_repairorder" inherit_id="repair.report_repairorder">
        <xpath expr="//table[hasclass('o_main_table')]//th[hasclass('text-center')]" position="after">
            <th class="text-right">Desconto (%)</th>
        </xpath>
        <xpath expr="//t[@t-if='o.fees_lines']//tr[hasclass('o_line_section')]" position="replace">
            <tr class="bg-200 o_line_section"><td colspan="6"><strong>Operations</strong></td></tr>
        </xpath>
        <xpath expr="//t[@t-if='o.fees_lines']//td[hasclass('o_price_total')]" position="before">
            <td class="text-right">
                <span t-field="fees.discount"/>
            </td>
        </xpath>
    </template>

</odoo>
