<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <!-- POS order form -->
    <record id="view_find_order_form" model="ir.ui.view">
        <field name="name">POS Order Find</field>
        <field name="model">pos.find.order</field>
        <!--<field name="type">form</field>-->
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(act_l10n_br_pos_return)d" string="Devolução" type="action"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,paid,invoiced" />
                </header>
                <group>
                    <field name="name" readonly="1"/>
                    <field name="canceled_order" invisible="1"/>
                    <field name="date_order" readonly="1"/>
                    <field name="session_id" readonly="1"/>
                    <field name="partner_id" readonly="1"/>
                    <field name="chave_cfe" readonly="1"/>
                    <field name="amount_total" readonly="1"/>
                    <field name="lines" colspan="4" nolabel="1">
                        <tree string="Order lines">
                            <field name="product_id" readonly="1"/>
                            <field name="qty" readonly="1"/>
                            <field name="qtd_produtos_devolvidos" readonly="1"/>
                            <field name="price_unit" readonly="1"/>
                            <field name="discount" readonly="1"/>
                            <field name="price_subtotal" readonly="1"/>
                            <field name="price_subtotal_incl" readonly="1"/>
                        </tree>
                        <form string="Order lines">
                            <group col="4">
                                <field name="product_id" readonly="1" />
                                <field name="qty" readonly="1" />
                                <field name="qtd_produtos_devolvidos" readonly="1" />
                                <field name="discount" readonly="1"  />
                                <field name="price_unit" readonly="1" />
                            </group>
                        </form>
                    </field>
                </group>
            </form>
        </field>
    </record>

     <!--POS order tree -->
    <record model="ir.ui.view" id="view_pos_find_order_tree">
        <field name="name">POS Order Find</field>
        <field name="model">pos.find.order</field>
        <!--<field name="type">tree</field>-->
        <field name="arch" type="xml">
            <tree>
                <field name="name" readonly="1"/>
                <field name="partner_id" readonly="1"/>
                <field name="date_order" readonly="1"/>
                <field name="amount_total" sum="Quantidade Total" readonly="1"/>
                <field name="session_id" readonly="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_pos_find_order">
        <field name="name">Orders Find</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.find.order</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window.view" id="action_pos_find_order_form">
        <field name="sequence" eval="0"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_find_order_form"/>
        <field name="act_window_id" ref="action_pos_find_order"/>
    </record>
    <record model="ir.actions.act_window.view" id="action_pos_find_order_tree">
        <field name="sequence" eval="0"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_pos_find_order_tree"/>
        <field name="act_window_id" ref="action_pos_find_order"/>
    </record>

</data>
</openerp>
