                        <div class="o_setting_right_pane">
                            <label for="pos_sat_path" string="SAT Path" />
                            <div class="content-group mt16">
                                <field name="pos_sat_path" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="pos_cashier_number" string="Cashier Number" />
                            <div class="content-group mt16">
                                <field name="pos_cashier_number" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="pos_activation_code" string="Activation Code" />
                            <div class="content-group mt16">
                                <field name="pos_activation_code" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="pos_signature_sat" string="SAT Signature" />
                            <div class="content-group mt16">
                                <field name="pos_signature_sat" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label
