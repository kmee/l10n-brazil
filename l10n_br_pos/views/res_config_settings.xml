                        <div class="o_setting_right_pane">
                            <label for="pos_printer_params" string="Printer Params" />
                            <div class="content-group mt16">
                                <field name="pos_printer_params" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="pos_session_sat" string="SAT Session" />
                            <div class="content-group mt16">
                                <field name="pos_session_sat" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="pos_additional_data" string="Additional Data" />
                            <div class="content-group mt16">
                                <field name="pos_additional_data" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
