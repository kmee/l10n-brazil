<odoo>

    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="name">res.config.settings.form.inherit.l10n_br_pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="pos_inventory_section" position="after">
                <h2>Brazilian Fiscal</h2>
                <div id="pos_brazilian_fiscal" class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label
                                for="pos_iface_fiscal_via_proxy"
                                string="Fiscal Via Proxy"
                            />
                            <div class="content-group mt16">
                                <field name="pos_iface_fiscal_via_proxy" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label
                                for="pos_out_pos_fiscal_operation_id"
                                string="Out POS Fiscal Operation"
                            />
                            <div class="content-group mt16">
                                <field name="pos_out_pos_fiscal_operation_id" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="pos_partner_id" string="Partner" />
                            <div class="content-group mt16">
                                <field name="pos_partner_id" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label
                                for="pos_refund_pos_fiscal_operation_id"
                                string="Refund POS Fiscal Operation"
                            />
                            <div class="content-group mt16">
                                <field name="pos_refund_pos_fiscal_operation_id" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label
                                for="pos_anonymous_simplified_limit"
                                string="Anonymous Simplified Limit"
                            />
                            <div class="content-group mt16">
                                <field name="pos_anonymous_simplified_limit" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label
                                for="pos_simplified_invoice_limit"
                                string="Simplified Invoice Limit"
                            />
                            <div class="content-group mt16">
                                <field name="pos_simplified_invoice_limit" />
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label
                                for="pos_simplified_document_type_id"
                                string="Simplified Document Type"
                            />
                            <div class="content-group mt16">
                                <field name="pos_simplified_document_type_id" />
