<odoo>

    <record model="ir.ui.view" id="esocial.situacao_geradora_acidente_form">
        <field name="name">esocial.situacao_geradora_acidente_form</field>
        <field name="model">esocial.situacao_geradora_acidente</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Situação Geradora do Acidente de Trabalho"
            edit="false" create="false" delete="false">
                <sheet>
                    <group>
                        <group name="geral" colspan="2" col="2">
                            <field name="codigo"/>
                            <field name="nome" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="esocial.situacao_geradora_acidente_tree">
        <field name="name">esocial.situacao_geradora_acidente_view</field>
        <field name="model">esocial.situacao_geradora_acidente</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Situação Geradora do Acidente de Trabalho"
            edit="false" create="false" delete="false">
                <field name="codigo" />
                <field name="nome" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="situacao_geradora_acidente_search">
        <field name="name">esocial.situacao_geradora_acidente_search</field>
        <field name="model">esocial.situacao_geradora_acidente</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Situação Geradora do Acidente de Trabalho">
                <field name="codigo" />
                <field name="nome" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="situacao_geradora_acidente_action">
        <field name="name">Situação Geradora do Acidente de Trabalho</field>
        <field name="res_model">esocial.situacao_geradora_acidente</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="situacao_geradora_acidente_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="situacao_geradora_acidente_tree"/>
        <field name="act_window_id" ref="situacao_geradora_acidente_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="situacao_geradora_acidente_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="situacao_geradora_acidente_form"/>
        <field name="act_window_id" ref="situacao_geradora_acidente_action"/>
    </record>

    <menuitem
        action="esocial.situacao_geradora_acidente_action"
        id="menu_esocial_situacao_geradora_acidente"
        name="16-Situação Geradora do Acidente de Trabalho"
        parent="menu_esocial_tabelas"
        sequence="16"
    />

</odoo>
