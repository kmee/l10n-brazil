<odoo>

    <record model="ir.ui.view" id="esocial.tipo_arquivo_esocial_form" >
        <field name="name">esocial.tipo_arquivo_esocial_form</field>
        <field name="model">esocial.tipo_arquivo_esocial</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Tipos de Arquivo do eSocial"
            edit="false" create="false" delete="false">
                <sheet>
                    <group>
                        <group name="geral" colspan="2" col="2">
                            <field name="codigo"/>
                            <field name="descricao" colspan="2" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="esocial.tipo_arquivo_esocial_tree">
        <field name="name">esocial.tipo_arquivo_esocial_view</field>
        <field name="model">esocial.tipo_arquivo_esocial</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Arquivo do eSocial"
            edit="false" create="false" delete="false">
                <field name="codigo" />
                <field name="descricao" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="tipo_arquivo_esocial_search">
        <field name="name">esocial.tipo_arquivo_esocial_search</field>
        <field name="model">esocial.tipo_arquivo_esocial</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Tipos de Arquivo do eSocial">
                <field name="codigo" />
                <field name="descricao" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="tipo_arquivo_esocial_action">
        <field name="name">Tipos de Arquivo do eSocial</field>
        <field name="res_model">esocial.tipo_arquivo_esocial</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="tipo_arquivo_esocial_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="tipo_arquivo_esocial_tree"/>
        <field name="act_window_id" ref="tipo_arquivo_esocial_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="tipo_arquivo_esocial_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="tipo_arquivo_esocial_form"/>
        <field name="act_window_id" ref="tipo_arquivo_esocial_action"/>
    </record>

    <menuitem
        action="esocial.tipo_arquivo_esocial_action"
        id="menu_esocial_tipo_arquivo_esocial"
        name="09-Tipos de Arquivo do eSocial"
        parent="menu_esocial_tabelas"
        sequence="9"
    />

</odoo>
