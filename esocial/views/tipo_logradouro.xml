<odoo>

    <record model="ir.ui.view" id="esocial.tipo_logradouro_form">
        <field name="name">esocial.tipo_logradouro_form</field>
        <field name="model">esocial.tipo_logradouro</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Tipos de Logradouro"
            edit="false" create="false" delete="false">
                <sheet>
                    <group>
                        <group name="geral" colspan="2" col="2">
                            <field name="codigo"/>
                            <field name="nome" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="esocial.tipo_logradouro_tree">
        <field name="name">esocial.tipo_logradouro_view</field>
        <field name="model">esocial.tipo_logradouro</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Logradouro"
            edit="false" create="false" delete="false">
                <field name="codigo" />
                <field name="nome" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="tipo_logradouro_search">
        <field name="name">esocial.tipo_logradouro_search</field>
        <field name="model">esocial.tipo_logradouro</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="Tipos de Logradouro">
                <field name="codigo" />
                <field name="nome" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="tipo_logradouro_action">
        <field name="name">Tipos de Logradouro</field>
        <field name="res_model">esocial.tipo_logradouro</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="tipo_logradouro_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="tipo_logradouro_tree"/>
        <field name="act_window_id" ref="tipo_logradouro_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="tipo_logradouro_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="tipo_logradouro_form"/>
        <field name="act_window_id" ref="tipo_logradouro_action"/>
    </record>

    <menuitem
        action="esocial.tipo_logradouro_action"
        id="menu_esocial_tipo_logradouro"
        name="20-Tipos de Logradouro"
        parent="menu_esocial_tabelas"
        sequence="20"
    />

</odoo>
